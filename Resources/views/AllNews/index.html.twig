{% extends 'MainSiteBundle::layout.html.twig' %}

{% block body %}

<div class="primary_content_wrap">
    <div class="container_12 clearfix">
        <div class="grid_12">
            <div class="indent">

                <div id="content" class="grid_9 alpha">

                    <div id="post-60" class="post-60 extra type-extra status-publish hentry post">

                        {% for onenews in news %}

                            <article id="post-42" class="post-42 post type-post status-publish format-standard hentry category-in-sagittis-mi-rhoncus category-sed-tincidunt-mauris tag-at tag-curabitur tag-euismod tag-odio tag-sem tag-sit tag-tristique tag-ut tag-vel post-holder cat-5-id cat-1-id">
                                <div class="post-container">
                                    {% set onenewsT = onenews.translate( locale ) %}
                                    {% set title = onenewsT.getTitle() %}
                                    {% set link  = url( 'onenews', { 'translit': onenewsT.getTranslit() } ) %}

                                    <h2>
                                        <a href="{{ link }}" title="{{ title }}" >
                                            {{ title }}
                                        </a>
                                    </h2>

                                    <div class="post-meta">
                                        <div class="fleft">
                                            {% set dateEn = onenews.datecreate | date('Y-d-m H:i') %}
                                            <time datetime="{{dateEn}}">
                                              {% if locale=='en' %} 
                                                {{dateEn}}
                                              {% else %}
                                                {% set dateRu = onenews.datecreate | date('d.m.Y H:i') %}    
                                                {{dateRu}}
                                              {% endif %}
                                            </time>
                                            
                                        </div>
                                        <div class="fright">
                                        </div>
                                    </div><!--.post-meta-->

                                    <div class="post-block">
                                        <figure class="featured-thumbnail">
                                            <span class="img-wrap">
                                                <a href="{{ link }}">
                                                    {% if onenews.iconImage is not null %}
                                                        <img width="90" height="80" class = 'menu_sys_iconImage' style = 'z-index: 0;' 
                                                              src = '{{ vich_uploader_asset( onenews, 'iconImage' ) }}?{{ random() }}'/>
                                                    {% endif %}
                                                </a>
                                            </span>
                                        </figure> 
                                        {{ onenewsT.getDescription() |slice( 0, 300 )| raw }}...
                                        <a href="{{ link }}">{{ "Read More" | trans }}</a>
                                        
                                    </div>
                                    
                                </div>
                                <div class="line_bottom"></div>
                            </article>

                        {% endfor %}


 
                    </div>
                </div>

                {% render (controller("MainSiteBundle:Default:rightblock",{ entity: entity} )) %}
  
          </div>
             
            </div>
          </div>
     </div>
</div>
{% endblock %}