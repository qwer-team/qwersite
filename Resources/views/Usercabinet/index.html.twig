{% extends 'HOfficeSiteBundle::layout.html.twig' %} 

{% block body %} 
    {% if user is not empty %}
             
            
           
           <h2>Личная информация</h2>
           <p>
            ФИО: {{ user.fio }}
           </p>
           <p>
            Телефон: {{ user.tel }}
           </p>
           <hr />
           <h2 class="redinfo">Редактирование информации</h2>
           <div class="redinfo_open" style="display:none">
           <form action="{{ path('update_usercab', { 'id': user.id }) }}" method="post" {{ form_enctype(edit_form) }} >
            
            <p >
                    {{ form_label(edit_form['username']) }}
                    {{ form_widget(edit_form['username']) }}
            </p>
            <p >
                    {{ form_label(edit_form['email']) }}
                    {{ form_widget(edit_form['email']) }}
            </p>  
            <p >
                    {{ form_label(edit_form['skype']) }}
                    {{ form_widget(edit_form['skype']) }}
            </p>  
            <p >
                    {{ form_label(edit_form['website']) }}
                    {{ form_widget(edit_form['website']) }}
            </p>
            <p >        
                    {{form_label(edit_form['date_birth'])}} 
                    {{form_widget(edit_form['date_birth'])}} 
            </p>
            {{ form_widget(edit_form) }}
         {{ form_row(edit_form._token) }} 
            <input type="submit" name="sub" value="Изменить данные" />

</form>
                   
          

</div>
           <hr />
           <h2 class="redpass">Редактирование информации</h2>
           <div class="redpass_open" style="display:none">
                   <form action="{{ path('usercab_update_pass', { 'id': user.id }) }}" method="post" {{ form_enctype(pass_form) }} id="form_pas_sub">
                          
                                    {{ form_widget(pass_form['password']) }}
                                            {{ form_row(pass_form._token) }} 
                           <input type="submit" name="sub" value="Изменить пароль" />
                   </form>
           </div>




        {% else %}
            Залогиньтесь!
        {% endif %} 
{% endblock %}