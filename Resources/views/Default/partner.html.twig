{% extends 'MainSiteBundle::layout.html.twig' %}
{% block menu %}
    {{parent()}}
{% endblock %}
{% block body %}

<div class="primary_content_wrap">
    <div class="container_12 clearfix">
        <div class="grid_12">
            <div class="indent">

                <div id="content" class="grid_9 alpha">

                    <div id="post-60" class="post-60 extra type-extra status-publish hentry post">

                        <article class="post-holder single-post">
                            <header>
                                <h1>{{ entity.title }}</h1>
                            </header>
                            <figure class="featured-thumbnail"><span class="img-wrap">
                            <img width="210" height="169" title="{{ entity.title }}"  class="thumb wp-post-image" src="/images/icons{{asset(entity.icon)}}">
                                </span></figure>                
                            <div class="post-content">
                                <h6>{{ entity.description | raw }}</h6>
                                {{ entity.content | raw }}
                            </div><!--.post-content-->
                        </article>
                    </div>
                </div>
                {% render(controller("MainSiteBundle:Default:rightblock")) 
                    with { 
                        'parent_id' : entity.parent, 
                        'entity': entity, 
                        'link': 'news' 
                    } 
                %}
            </div>
             
            </div>
          </div>
     </div>
</div>
{% endblock %}