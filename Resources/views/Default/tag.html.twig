{% extends 'MainSiteBundle::layout.html.twig' %}
{% block menu %}
        <header id="header">
            
            {% set routing = app.request.attributes.get('_route') %}
            {% render(controller("MainSiteBundle:Default:menu", {"routing" : routing, "req" : app.request, "entity": keyword, "_locale": app.request.locale}))  %}
        </header>
        {% endblock %}
{% block body %}
<div class="primary_content_wrap">
    <div class="container_12 clearfix">
        <div class="grid_12">
            <div class="indent">
                <div class="header-title">
                    <h1>Keywords</h1>
                </div>   

    <div id="gallery" class="four_columns">
        <ul class="portfolio">
         {% for entity in entities %}
            <li class="">
                <span class="image-border">
                    {% set image = entity.icon !='iconparent_id' ? entity.icon: 'default.png' %}
                    <a class="image-wrap" href="/images/icons/{{ image }}" rel="prettyPhoto[gallery]" title="Morbi ornare egestas urna">
                        <img width="200" height="120" src="/images/icons/{{ image }}" class="attachment-portfolio-post-thumbnail-small wp-post-image" alt="service-1" title="service-1" />
                        <span class="zoom-icon"></span>
                    </a>
                </span>
                <div class="folio-desc">
                    <h6>
                        <a href="/{{ locale }}/{{ entity.translate(locale).getTranslit() }}">
                            {{ entity.translate(locale).getTitle }}
                        </a>
                    </h6>
                <p> {{ entity.translate(locale).getDescription|slice(1, 50) }}... </p>
                <a href="/{{ locale }}/{{ entity.translate(locale).getTranslit() }}" class="button">
                    Далее...
                </a>
                </div>
            </li>
            {% endfor %}
        </ul>
   </div>

</div></div></div></div>
{% endblock %}      